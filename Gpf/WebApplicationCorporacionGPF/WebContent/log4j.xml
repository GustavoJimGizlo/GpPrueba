<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>

  <appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
    </layout>
  </appender>

  <appender name="FILE" class="org.apache.log4j.FileAppender">
    <param name="File"   value="fybeca.log" />
    <param name="Append" value="true" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
    </layout>
  </appender>

  <appender name="HIBERNATE" class="org.apache.log4j.FileAppender">
    <param name="File"   value="hibernate.log" />
    <param name="Append" value="true" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
    </layout>
  </appender>

  <category name="com.yage">
    <priority value="info" />
    <appender-ref ref="FILE" />
  </category>

  <category name="com.iportal">
    <priority value="info" />
    <appender-ref ref="FILE" />
  </category>

  <category name="com.serviciosweb.gpf.facturacion.farmacias.pfizer">
    <priority value="info" />
    <appender-ref ref="FILE" />
  </category>

  <category name="net.sf">
    <priority value="error" />
    <appender-ref ref="HIBERNATE" />
  </category>

  <root>
    <priority value ="info" />
    <appender-ref ref="STDOUT"/>
  </root>

</log4j:configuration>
